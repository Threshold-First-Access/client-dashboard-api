{
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "extends": ["airbnb", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "func-names": 0,
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"],
    "no-tabs": 0,
    "no-trailing-spaces": 0,
    "no-param-reassign": 0,
    "arrow-body-style": 0,
    "class-methods-use-this": 0,
    "prettier/prettier": "error",
    "no-useless-escape": 0,
    "padded-blocks": 0,
    "no-use-before-define": [2, "nofunc"],
    "valid-jsdoc": 1
  }
}
